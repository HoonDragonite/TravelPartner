<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaceInfoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_info_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitCenter" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_info_image"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/tv_info_contenttypeid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#ContentType"
                    android:textSize="16dp"
                    android:textColor="@color/mainColor"/>

                <TextView
                    android:id="@+id/tv_info_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_info_contenttypeid"
                    android:text="Title"
                    android:textSize="18dp"/>

                <ImageView
                    android:id="@+id/iv_info_tel"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_below="@id/tv_info_title"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_phone_black_24dp" />

                <TextView
                    android:id="@+id/tv_info_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_info_tel"
                    android:layout_alignBottom="@id/iv_info_tel"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Phone Number"/>

                <Button
                    android:id="@+id/btn_info_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@id/tv_info_tel"
                    android:layout_marginLeft="10dp"
                    android:layout_alignBottom="@id/iv_info_tel"
                    android:text="전화걸기"/>

                <ImageView
                    android:id="@+id/iv_info_addr"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_below="@id/iv_info_tel"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_place_black_24dp" />

                <TextView
                    android:id="@+id/tv_info_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_info_addr"
                    android:layout_alignBottom="@id/iv_info_addr"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="경기도 의정부시"/>

                <Button
                    android:id="@+id/btn_info_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@id/tv_info_addr"
                    android:layout_marginLeft="10dp"
                    android:layout_alignBottom="@id/iv_info_addr"
                    android:text="길 찾기"/>

                <ImageView
                    android:id="@+id/iv_info_opentime"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_below="@id/iv_info_addr"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_time_black_24dp" />

                <TextView
                    android:id="@+id/tv_info_opentime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_info_opentime"
                    android:layout_alignBottom="@id/iv_info_opentime"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="08:00~18:00"/>

                <ImageView
                    android:id="@+id/iv_info_resttime"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_below="@id/iv_info_opentime"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_block_black_24dp" />

                <TextView
                    android:id="@+id/tv_info_resttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_info_resttime"
                    android:layout_alignBottom="@id/iv_info_resttime"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="월, 수, 금"/>

                <LinearLayout
                    android:id="@+id/layout_info_icons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_below="@id/iv_info_resttime">

                    <ImageView
                        android:id="@+id/iv_info_parking"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="0dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_parking"
                        android:background="#fff"
                     />
                    <ImageView
                        android:id="@+id/iv_info_pet"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="0dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_pet"
                        android:background="#fff"/>
                    <ImageView
                        android:id="@+id/iv_info_stroller"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="0dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_stroller"
                        android:background="#fff"/>
                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="0dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_info"
                        android:background="#fff"/>
                </LinearLayout>

                <fragment
                    android:id="@+id/map_info"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@id/layout_info_icons"
                    android:layout_marginTop="20dp"
                    class="com.google.android.gms.maps.SupportMapFragment"
                    />

                <LinearLayout
                    android:id="@+id/layout_info_com"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/map_info">

                    <Button
                        android:id="@+id/btn_info_write_review"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:text="@string/write_review"/>

                    <Button
                        android:id="@+id/btn_info_favorite"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:text="@string/favorite"/>

                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>