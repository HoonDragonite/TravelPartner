<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaceInfoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_info_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitCenter" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_info_image"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/tv_info_contenttypeid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#ContentType"
                    android:textColor="@color/mainColor"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_info_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_info_contenttypeid"
                    android:text="Title"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/iv_info_tel"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_below="@id/tv_info_title"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_phone_black_24dp" />

                <TextView
                    android:id="@+id/tv_info_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/iv_info_tel"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/iv_info_tel"
                    android:text="@string/ready_for_update" />


                <ImageView
                    android:id="@+id/iv_info_addr"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_below="@id/iv_info_tel"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_place_black_24dp" />

                <TextView
                    android:id="@+id/tv_info_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/iv_info_addr"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/iv_info_addr"
                    android:text="@string/ready_for_update" />


                <ImageView
                    android:id="@+id/iv_info_opentime"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_below="@id/iv_info_addr"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_time_black_24dp" />

                <TextView
                    android:id="@+id/tv_info_opentime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/iv_info_opentime"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:layout_toRightOf="@id/iv_info_opentime"
                    android:text="@string/ready_for_update" />

                <ImageView
                    android:id="@+id/iv_info_resttime"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_below="@id/iv_info_opentime"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_block_black_24dp" />

                <TextView
                    android:id="@+id/tv_info_resttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/iv_info_resttime"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:layout_toRightOf="@id/iv_info_resttime"
                    android:text="@string/ready_for_update" />


                <ImageView
                    android:id="@+id/iv_info_parking"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/iv_info_resttime"
                    android:background="#00000000"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
/>

                <ImageView
                    android:id="@+id/iv_info_pet"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@id/iv_info_parking"
                    android:layout_alignTop="@id/iv_info_parking"
                    android:layout_marginLeft="10dp"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    android:background="#00000000"/>

                <ImageView
                    android:id="@+id/iv_info_stroller"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@id/iv_info_pet"
                    android:layout_alignTop="@id/iv_info_pet"
                    android:layout_marginLeft="10dp"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    android:background="#00000000"/>

                <ImageButton
                    android:id="@+id/btn_info_info"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@id/iv_info_stroller"
                    android:layout_alignTop="@id/iv_info_stroller"
                    android:layout_marginLeft="10dp"
                    android:padding="0dp"
                    android:scaleType="fitCenter"

                    android:background="#00000000"/>

                <LinearLayout
                    android:id="@+id/layout_info_com"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_info_parking"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                    <Button
                        android:id="@+id/btn_info_tel"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="전화걸기"
                        android:background="@drawable/btnshape"
                        android:layout_marginRight="8dp"
                        />
                    <Button
                        android:id="@+id/btn_info_addr"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="길 찾기"
                        android:background="@drawable/btnshape"
                        android:layout_marginRight="8dp"
                        />

                    <Button
                        android:id="@+id/btn_info_favorite"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="@string/favorite"
                        android:background="@drawable/btnshape"
                        android:layout_marginRight="5dp"
                        />
                    </LinearLayout>
                    <Button
                        android:id="@+id/btn_info_write_review"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="@string/write_review"
                        android:background="@drawable/btnshape"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"

                        />

                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>