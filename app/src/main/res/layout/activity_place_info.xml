<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaceInfoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@color/black"/>

            <ImageView
                android:id="@+id/iv_info_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitCenter"
                android:src="@drawable/brown"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_info_image"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/tv_info_contenttypeid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#여행지"
                    android:textSize="16dp"
                    android:textColor="@color/mainColor"/>

                <TextView
                    android:id="@+id/tv_info_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_info_contenttypeid"
                    android:text="송파 가든파이브"
                    android:textSize="18dp"/>

                <ImageView
                    android:id="@+id/iv_info_tel"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_below="@id/tv_info_title"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_phone_black_24dp" />

                <TextView
                    android:id="@+id/tv_info_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_info_tel"
                    android:layout_alignBottom="@id/iv_info_tel"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="010-4024-4729"/>

                <Button
                    android:id="@+id/btn_info_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@id/tv_info_tel"
                    android:layout_marginLeft="10dp"
                    android:layout_alignBottom="@id/iv_info_tel"
                    android:text="전화걸기"/>

                <ImageView
                    android:id="@+id/iv_info_addr"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_below="@id/iv_info_tel"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_place_black_24dp" />

                <TextView
                    android:id="@+id/tv_info_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_info_addr"
                    android:layout_alignBottom="@id/iv_info_addr"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="경기도 의정부시"/>

                <Button
                    android:id="@+id/btn_info_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@id/tv_info_addr"
                    android:layout_marginLeft="10dp"
                    android:layout_alignBottom="@id/iv_info_addr"
                    android:text="길 찾기"/>

                <ImageView
                    android:id="@+id/iv_info_opentime"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_below="@id/iv_info_addr"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_time_black_24dp" />

                <TextView
                    android:id="@+id/tv_info_opentime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_info_opentime"
                    android:layout_alignBottom="@id/iv_info_opentime"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="08:00~18:00"/>

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>